            </div>
        </div>

        <div class="row">
            <div class="col-md-6">

                <div class="jumbotron text-white">
                    Tulevased üritused
                </div>

                <div class="text-start bg-white">
                    <ol>
                        
                        @foreach (var item in Model.Where (s => s.Date >= DateTime.Now))
