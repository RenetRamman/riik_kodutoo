                </div>
                

            </div>
            <div class="col-md-6">

                <div class="jumbotron text-white">
                    Toimunud üritused
                </div>

                <ol class="text-start bg-white">
                    
                    @foreach (var item in Model.Where(s => s.Date < DateTime.Now))
                    {
                        <li>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </div>
                                <div class="col-md-2">
                                    @Html.DisplayFor(modelItem => item.Date)
                                </div>
                                <div class="col-md-4">
                                    <a asp-action="Osalejad" asp-route-id="@item.ID">OSAVÕTJAD</a>
