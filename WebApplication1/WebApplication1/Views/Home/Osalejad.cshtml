@model WebApplication1.Models.EventModel

@{
    ViewData["Title"] = "Details";

    IEnumerable<PersonModel>? persons = ViewData["Persons"] as IEnumerable<PersonModel>;
    IEnumerable<EventPersonModel>? eventPersons = ViewData["EventPersons"] as IEnumerable<EventPersonModel>;

    IEnumerable<CompanyModel>? companies = ViewData["Companies"] as IEnumerable<CompanyModel>;
    IEnumerable<EventCompanyModel>? eventCompanies = ViewData["EventCompanies"] as IEnumerable<EventCompanyModel>;

    IEnumerable<PersonModel>? participatingPersons = ViewData["ParticipatingPersons"] as IEnumerable<PersonModel>;
}

<h1>Details</h1>

<div>
    <h4>EventModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdditionalInfo)
        </dd>
    </dl>

    <ol>
        @if (participatingPersons != null)
        {
            @foreach (var person in participatingPersons)
            {
                <li>
                    @Html.DisplayFor(modelItem => person.FirstName)
                </li>
            }
        }
    </ol>
</div>
